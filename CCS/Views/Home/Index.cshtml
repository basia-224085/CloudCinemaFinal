@{
    ViewBag.Title = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Movies List</h1>

</div>
<body>
    <div class="row">
        <div class="col-md">
            <input type="button" value="Monday" class="btn-dark" />
        </div>
        <div class="col-md">
            <input type="button" value="Thuesday" class="btn-dark" />
        </div>
        <div class="col-md">
            <input type="button" value="Wednesday" class="btn-dark" />
        </div>
        <div class="col-md">
            <input type="button" value="Thursday" class="btn-dark" />
        </div>
        <div class="col-md">
            <input type="button" value="Friday" class="btn-dark" />
        </div>
        <div class="col-md">
            <input type="button" value="Saturday" class="btn-dark" />
        </div>
        <div class="col-md">
            <input type="button" value="Sunday" class="btn-dark" />
        </div>
    </div>
    <div class="text-center">
        <p><br> Movies played on the chosen day </p>
    </div>
    <ul class="list-group">
        @for (var i = 0; i < 4; i++)
        {
            <li class="list-group-item">
                <img class="float-left" src="/photos/inception.jpg" style="height: 300px;" />
                <p>
                    <h1>&emsp;Inception</h1>
                    <a>
                        &emsp;
                        A thief who steals corporate secrets through the use of dream-sharing technology
                        is given the inverse task of planting an idea into the mind of a C.E.O.
                    </a><br />
                </p>
                <div class="float-right">
                    <input type="button" value="Watch Trailer" class="btn-outline-dark"
                           onclick="window.location.href='@Url.Action("Trailer", "Home")';" />

                </div>
                <br />
                <br />
                <div class="row">
                    <div class="col-md">
                        <input type="button" value="12:00" class="btn-outline-dark"
                               onclick="window.location.href='@Url.Action("Tickets", "Home")';" />
                    </div>
                    <div class="col-md">
                        <input type="button" value="14:30" class="btn-outline-dark" disabled />
                    </div>
                    <div class="col-md">
                        <input type="button" value="18:00" class="btn-outline-dark" />
                    </div>
                    <div class="col-md">
                        <input type="button" value="21:30" class="btn-outline-dark" />
                    </div>
                </div>
            </li>
        }
    </ul>
</body>