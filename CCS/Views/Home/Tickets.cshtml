@{
    ViewData["Title"] = "Tickets Page";
}
@functions {
    
}
<html>
<head>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var input = document.getElementById('normal');
            if (localStorage['normal']) { // if normal is set
                input.value = localStorage['normal']; // set the value
            }
            input.onchange = function () {
                localStorage['normal'] = this.value; // change localStorage on change
            }
        });
    </script>
    <script  type="text/javascript">
        function saveChoices() {
            @ViewBag.normal = localStorage['normal'].value;
            console.log(@ViewBag.normal);
            window.location.href='@Url.Action("Seats", "Home")';
        }
    </script>
</head>
<body>
    <h1 display-4>Choose tickets:</h1>
    
    
    <div class="col-md">
        <select id="normal">
            <option value="0"> 0 </option>
            <option value="1"> 1 </option>
            <option value="2"> 2 </option>
            <option value="3"> 3 </option>
            <option value="4"> 4 </option>
            <option value="5"> 5 </option>
            <option value="6"> 6 </option>
        </select>
        <a style="font-size:medium">Normal&emsp;&emsp;&emsp;&emsp;&emsp;PLN 20.00</a>
    </div>
    <br />
    <div class="col-md">
        <select id="student">
            <option value="0"> 0 </option>
            <option value="1"> 1 </option>
            <option value="2"> 2 </option>
            <option value="3"> 3 </option>
            <option value="4"> 4 </option>
            <option value="5"> 5 </option>
            <option value="6"> 6 </option>
        </select>
        <a style="font-size:medium">Student&emsp;&ensp;&ensp;&emsp;&emsp;&emsp;PLN 10.00</a>
    </div>
    <br />
    <div class="col-md">
        <select id="child">
            <option value="0"> 0 </option>
            <option value="1"> 1 </option>
            <option value="2"> 2 </option>
            <option value="3"> 3 </option>
